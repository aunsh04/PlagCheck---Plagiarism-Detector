<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>team105</groupId>
	<artifactId>cs5500-sp2018-team105</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>cs5500-sp2018-team105</name>
	<description>Properties file for plagiarism check</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<antlr4.visitor>true</antlr4.visitor>
		<antlr4.listener>true</antlr4.listener>
		<!-- SonarLint has been reporting session in controllers, which help us and is necessary with our Java MVC implementation
		     pythonparsers is the package for the java files generated by antlr 
		     html2canvas.js is the library used for report generation-->
		<sonar.exclusions>src/main/java/controller/*, src/main/java/pythonparsers/*,src/main/webapp/html2canvas.js</sonar.exclusions>
		<!-- We spoke to Professor Annunziato - there is no easy way of testing a controller. We have moved the logic from
		controllers to service and test all the services except GitCloneService
		GitCloneService takes GitHub enterprise username and password as arguments. Since there is no easy way of getting details like credentials
		from a properties file in MVC, we have excluded this file from all tests. But we tested this file locally before pushing to master
		src/main/resources/ consist of all the python files used for testing
		DBConnection.java cannot be tested for the exceptions for the connection to the DB, hence we have excluded it from sonar coverage-->
		<sonar.coverage.exclusions> src/main/java/pythonparsers/*, src/main/java/controller/*,target/generated-sources/antlr4/*,src/main/resources/*,src/main/java/connection/*,src/main/java/service/GITCloneService.java</sonar.coverage.exclusions>
	</properties>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>3.2.0</version>
			</plugin>

			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.7.7.201606060606</version>
				<executions>
					<execution>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<execution>
						<id>report</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.antlr</groupId>
				<artifactId>antlr4-maven-plugin</artifactId>
				<version>4.7</version>
				<executions>
					<execution>
						<id>antlr</id>
						<goals>
							<goal>antlr4</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
